<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-light">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= link_to 'Show', user ,class:"btn btn-outline-secondary"  %></td>
        <td><%= link_to 'Edit', edit_user_path(user) ,class:"btn btn-outline-secondary"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

